package br.ifsul.jogodaforca;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.builder.SpringApplicationBuilder;
import org.springframework.context.ConfigurableApplicationContext;

import net.bytebuddy.dynamic.loading.ClassLoadingStrategy.Configurable;

@SpringBootApplication
public class Main {

	public static void main(String[] args) {
		SpringApplicationBuilder sab = new SpringApplicationBuilder(JogoDaForcaApplication.class);

		sab.headless(false);

		ConfigurableApplicationContext app = sab.run(args);

	}
}
