package br.ifsul.jogodaforca;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.builder.SpringApplicationBuilder;
import org.springframework.context.ConfigurableApplicationContext;

import model.PalavraRepository;
import ui.MainFrame;
import ui.UIRelatorio;

@SpringBootApplication
public class Main {

	@Autowired
	protected PalavraRepository palavraRepository;

	public static void main(String[] args) {
		SpringApplicationBuilder sab = new SpringApplicationBuilder(Main.class);

		sab.headless(false);

		ConfigurableApplicationContext app = sab.run(args);


		Main instancia = (Main) app.getBean("main");
		
		MainFrame mf = new MainFrame();
		mf.setVisible(true);

		UIRelatorio rf = new UIRelatorio(instancia.palavraRepository);
		
	}
}
